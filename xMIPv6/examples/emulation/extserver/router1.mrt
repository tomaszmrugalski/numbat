# filename: routert1.mrt
# author: Thomas Reschka
# routing table for router 1 of tcp example "extServer"

ifconfig:

# interface 0 to client 1
name: ppp0
	inet_addr: 172.0.0.100
	Mask: 255.255.255.0
	MTU: 1500
	POINTTOPOINT MULTICAST

# interface 1 to server 1
name: ppp1
	inet_addr: 172.0.1.100
	Mask: 255.255.255.0
	MTU: 1500
	POINTTOPOINT MULTICAST

# interface 2 to external server (real network interface)
name: ext0
	inet_addr: 192.168.0.100
	Mask: 255.255.255.0
	MTU: 1500
	POINTTOPOINT MULTICAST

ifconfigend.


route:

#Destination	Gateway         Genmask         Flags 	Metric	Iface
172.0.0.1    	172.0.0.1     	255.255.255.0   H   	0   	ppp0
172.0.1.111    	172.0.1.111    	255.255.255.0   H   	0   	ppp1
0.0.0.0      	*             	0.0.0.0			G		0		ext0

routeend.
